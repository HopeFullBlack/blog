{{ form_start(form) }}
    {% if title %}
    <h2 class="title"> {{title}}</h2>
    {% endif %}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {# affichage de l'image : #}
    <div class="image">
        <div class="image-preview">
            {% if not article.imageUrl == "" %}
            <img src="{{article.imageUrl}}" alt="Image de l'article : {{article.title}} ">
                
            {% endif %}
        </div>
    <div class="">
        {% if required is defined %}
        {{ form_row(form.imageFile, {attr:{required: required}}) }}
            {% else %}
        {{ form_row(form.imageFile) }}

        {% endif %}
        {{ form_row(form.categories) }}
    </div>
   </div>
    <div class="">

        <button class="btn">{{ button_label|default('Save') }}</button>
    <a class="btn" href="{{ path('app_article_index') }}">Annuler</a>

    </div>
{{ form_end(form) }}
 